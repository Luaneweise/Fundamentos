#include <iostream>
using namespace std;
int main()
{ 
    float p1, p2, p3, ef, pr, prom;
    int c, n, nf;

    c==1;
    prom==0;
    
    cout<<"Ingresar la cantidad de alumnos: ";
    cin>>n; 
    while (n>=c)
    { 
        cout<<"Ingrese la nota del primer parcial: "; cin>>p1;
        cout<<"Ingrese la nota del segundo parcial: "; cin>>p2;
        cout<<"Ingrese la nota del tercer parcial: "; cin>>p3;
        cout<<"Ingrese la nota del examen final: "; <<endl; cin>>ef;
        cout<<"Ingrese la nota practica: "<<endl; cin>>pr;
        cout<<"La nota del alumno "<< c << "es";
        nf= ((p1+p2+p3)/3)*0.4+ef*0.4+pr*0.2;
        prom= (nf+prom);
        cout<<": "<<nf<<endl;
        c++ ; 
    } 
    
    prom= (prom/n);
    cout<<"el promedio de todos los estudiantes es: "<< prom <<endl;

    return 0;
}
